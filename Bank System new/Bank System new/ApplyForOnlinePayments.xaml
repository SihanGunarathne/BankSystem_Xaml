        <TextBox Grid.Column="1" HorizontalAlignment="Left" Height="37" Margin="459,20.6,0,0" Grid.Row="3" TextWrapping="Wrap" Text="Rs." VerticalAlignment="Top" Width="307" FontSize="20"/>
        <Label Content="Apply for Online Payments" Grid.Column="1" HorizontalAlignment="Left" Margin="187,57,0,0" VerticalAlignment="Top" Width="519" Foreground="#FF0FD72E" FontSize="40" FontWeight="Bold"/>

        <Button Content="Back" Grid.Column="1" HorizontalAlignment="Left" Margin="685,0.4,0,0" Grid.Row="4" VerticalAlignment="Top" Width="81" Click="Button_Click" Background="#FF4366B6" Foreground="#FF0B0752" OpacityMask="#FF007BFF" FontSize="24" FontWeight="Bold" Height="56"/>
        <Button Click="Button2_Click" x:Name="Button2" Content="Submit" Grid.Column="1" HorizontalAlignment="Left" Margin="459,0.4,0,0" Grid.Row="4" VerticalAlignment="Top" Width="118" Background="#FF4366B6" Foreground="#FF0B0752" OpacityMask="#FF007BFF" FontSize="24" FontWeight="Bold" Height="56" RenderTransformOrigin="1.783,0.546"/>

    </Grid>
