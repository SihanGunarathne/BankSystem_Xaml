        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />
            <RowDefinition Height="75" />

            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="companies" Grid.Column="1" HorizontalAlignment="Left" Margin="108,26,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Background="#FF7CE853" Height="39" Width="199"/>
        <RadioButton Content="CEB" Grid.Column="1" HorizontalAlignment="Left" Margin="437,26,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFAB6969"/>
        <RadioButton Content="Water board" Grid.Column="1" HorizontalAlignment="Left" Margin="554,26,0,0" Grid.Row="1" VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Foreground="#FFAB6969"/>
